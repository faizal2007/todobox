# ==== Core App ====
TITLE="TodoBox"
SECRET_KEY="change-me-to-a-long-random-string"
SALT="change-me-too"

# Database: sqlite | mysql | postgres
DATABASE_DEFAULT="sqlite"
DATABASE_NAME="todobox.db"

# Encrypt todo contents at rest (name/details)
TODO_ENCRYPTION_ENABLED="false"

# ==== OAuth (Google) ====
# Obtain from Google Cloud Console (OAuth 2.0 Client IDs)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Set to your public domain callback when behind Cloudflare Tunnel
# Example: https://app.example.com/auth/callback/google
OAUTH_REDIRECT_URI="http://localhost:5000/auth/callback/google"

# Control Google auth UX: select_account | consent | "select_account consent"
GOOGLE_OAUTH_PROMPT="select_account"

# ==== SMTP (optional, for sharing invites) ====
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""  # app password for Gmail
SMTP_FROM_EMAIL=""

# ==== Reverse Proxy / Cloudflare ====
# Trust one proxy layer (Cloudflare) by default
PROXY_X_FOR="1"
PROXY_X_PROTO="1"
PROXY_X_HOST="1"
PROXY_X_PREFIX="1"

# Prefer HTTPS URLs in generated links
PREFERRED_URL_SCHEME="https"

# Secure session cookies behind Cloudflare (HTTPS)
SESSION_COOKIE_SECURE="true"
SESSION_COOKIE_HTTPONLY="true"
SESSION_COOKIE_SAMESITE="Lax"  # Lax | Strict | None
# If you need cross-subdomain cookies, set to .example.com, else leave empty
# SESSION_COOKIE_DOMAIN=".example.com"

# Remember-me cookie
REMEMBER_COOKIE_SECURE="true"
REMEMBER_COOKIE_HTTPONLY="true"
REMEMBER_COOKIE_SAMESITE="Lax"

# ==== Flask / Debugging ====
# FLASK_ENV=production
# FLASK_DEBUG=0
