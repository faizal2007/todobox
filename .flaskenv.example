FLASK_ENV=development
DEBUG=True
TITLE=My Sandbox

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=change-me-to-a-secure-random-key
SALT=change-me-to-a-secure-salt

# Database Configuration
DATABASE_DEFAULT=sqlite
DATABASE_NAME=todobox.db

# MySQL Example (uncomment and configure if using MySQL)
# DB_URL=localhost
# DB_USER=todobox
# DB_PW=your-secure-password
# DB_NAME=todobox

# Todo Encryption (optional)
TODO_ENCRYPTION_ENABLED=false

# Optional: For PostgreSQL (uncomment and configure)
# DATABASE_DEFAULT=postgres
# POSTGRES_URL=192.168.1.25:5432
# POSTGRES_USER=postgres
# POSTGRES_PW=your-secure-password
# POSTGRES_DB=todo_db

# Application Settings
# BIND_ADDRESS=127.0.0.1  # Uncomment ONLY for local dev. For production, leave commented to use 0.0.0.0
PORT=5000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_OAUTH_PROMPT="login select_account"
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback/google

# Email/SMTP Configuration (for sharing invitations)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_gmail@gmail.com
# SMTP_PASSWORD=your_app_specific_password
# SMTP_FROM_EMAIL=your_gmail@gmail.com

# Reverse Proxy Configuration (optional)
# PROXY_X_FOR=1
# PROXY_X_PROTO=1
# PROXY_X_HOST=1
# PROXY_X_PREFIX=1

# PWA Debug Button (optional, use DEBUG instead)
# PWA_DEBUG=true
