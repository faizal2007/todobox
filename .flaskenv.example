# FLASK_ENV=development
FLASK_APP=todobox.py
TITLE=Shimasu

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=change-me-to-a-secure-random-key
SALT=change-me-to-a-secure-salt

# Database Configuration
DATABASE_DEFAULT=sqlite
DATABASE_NAME=todobox.db

# Todo Encryption (optional)
# Set to 'true' to enable encryption of todo data (name, details)
# When enabled, database administrators cannot read todo content in raw database
# Default: false (disabled)
TODO_ENCRYPTION_ENABLED=false

# Optional: For PostgreSQL (uncomment and configure)
# DATABASE_DEFAULT=postgres
# POSTGRES_URL=192.168.1.25:5432
# POSTGRES_USER=postgres
# POSTGRES_PW=your-secure-password
# POSTGRES_DB=todo_db

# Optional: For MySQL (uncomment and configure)
# DATABASE_DEFAULT=mysql
# DB_URL=localhost
# DB_USER=todobox
# DB_PW=your-secure-password
# DB_NAME=todobox

# Application Settings
TITLE=My Sandbox
BIND_ADDRESS=127.0.0.1
PORT=5000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
# IMPORTANT: When running behind a reverse proxy (e.g., haruka-tunnel, ngrok, cloudflare tunnel),
# set this to your public URL to fix Google OAuth sign-in issues.
# Example: OAUTH_REDIRECT_URI=https://your-public-domain.com/auth/callback/google
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback/google

# Email/SMTP Configuration (for sharing invitations)
# Required for sending sharing invitations via email
# For Gmail, use an App-specific password: https://support.google.com/accounts/answer/185833
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_gmail@gmail.com
# SMTP_PASSWORD=your_app_specific_password
# SMTP_FROM_EMAIL=your_gmail@gmail.com

# Reverse Proxy Configuration (optional)
# Set these when running behind multiple proxy layers (e.g., load balancer + tunnel)
# Values indicate how many proxies to trust for each X-Forwarded-* header
# PROXY_X_FOR=1
# PROXY_X_PROTO=1
# PROXY_X_HOST=1
# PROXY_X_PREFIX=1
